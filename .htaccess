<IfModule mod_rewrite.c>
    RewriteEngine On

    # FORÇA TUDO PRO INDEX.PHP SEM DEPENDER DO RewriteBase (funciona em 100% dos casos)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [QSA,L]
</IfModule>

# Segurança
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

Options -Indexes